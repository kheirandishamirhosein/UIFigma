<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/md_cv_above_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/co_layout_above_bar"
            android:layout_width="match_parent"
            android:background="@drawable/bag_above_bar"
            android:layout_height="wrap_content">


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/md_btn_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#0021CE"
                app:icon="@drawable/ic_menu"
                app:iconSize="30dp"
                app:iconTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_shop_icon"
                android:layout_width="21dp"
                android:layout_height="23.45dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="22dp"
                android:layout_marginStart="86dp"
                android:layout_marginEnd="136dp"
                android:src="@drawable/ic_above_bar_bag"
                app:layout_constraintBottom_toBottomOf="@id/md_btn_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/md_btn_menu" />

            <ImageView
                android:id="@+id/tv_eco"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_above_bar"
                android:layout_marginTop="4.79dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_shop_icon"
                app:layout_constraintStart_toEndOf="@id/iv_shop_icon"
                app:layout_constraintTop_toTopOf="@id/iv_shop_icon" />


            <ImageView
                android:id="@+id/md_btn_shop_bag_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="305dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/bag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="1"
                android:textSize="12dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/x_ic_circle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="75dp"
                app:layout_constraintStart_toStartOf="@id/md_btn_shop_bag_home"
                app:layout_constraintTop_toTopOf="@id/md_btn_shop_bag_home"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/md_cv_image_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/md_cv_above_bar_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/co_layout_image_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_image_program"
                    android:layout_width="306dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dr_image_home" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/md_cv_sorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/md_cv_image_sale">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/co_layout_sorting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_sorting"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="53dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/sort_ascending"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_sorting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="sorting:"
                android:textColor="#404040"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_sorting"
                app:layout_constraintStart_toEndOf="@id/iv_sorting"
                app:layout_constraintTop_toTopOf="@id/iv_sorting" />

            <TextView
                android:id="@+id/tv_ascending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:text="Ascending"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_sorting"
                app:layout_constraintStart_toEndOf="@id/tv_sorting"
                app:layout_constraintTop_toTopOf="@id/iv_sorting" />

            <ImageView
                android:id="@+id/iv_arrow_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_north"
                app:layout_constraintBottom_toBottomOf="@id/tv_ascending"
                app:layout_constraintStart_toEndOf="@id/tv_ascending"
                app:layout_constraintTop_toTopOf="@id/tv_ascending" />


            <TextView
                android:id="@+id/tv_descending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="descending"
                android:textSize="18sp"
                android:textColor="#404040"
                android:layout_marginEnd="43dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_sorting"
                app:layout_constraintStart_toEndOf="@id/tv_ascending"
                app:layout_constraintTop_toTopOf="@id/iv_sorting" />

            <ImageView
                android:id="@+id/iv_arrow_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_south"
                app:layout_constraintBottom_toBottomOf="@id/tv_descending"
                app:layout_constraintStart_toEndOf="@id/tv_descending"
                app:layout_constraintTop_toTopOf="@id/tv_descending" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>




    <ScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/md_cv_sorting">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/co_layout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/md_cv_sorting">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/co_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/scrollView_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_1_scrollView"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dr_image_sale"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_clothes"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/red"
                            android:layout_marginEnd="20dp"
                            android:text="Clothes"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="11sp"
                            app:cornerRadius="28dp"
                            app:layout_constraintStart_toStartOf="@id/image_1_scrollView"
                            app:layout_constraintTop_toBottomOf="@id/image_1_scrollView" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:numStars="5"
                            android:progressTint="@color/star"
                            android:rating="4"
                            android:stepSize="0.1"
                            app:layout_constraintBottom_toBottomOf="@id/md_btn_clothes"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/md_btn_clothes"
                            app:layout_constraintTop_toBottomOf="@id/image_1_scrollView"
                            app:layout_constraintTop_toTopOf="@id/md_btn_clothes" />

                        <TextView
                            android:id="@+id/tv_title_sale"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:text="@string/sneakers"
                            android:textColor="@color/black"
                            android:textAppearance="@style/nike_triple"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/md_btn_clothes" />

                        <TextView
                            android:id="@+id/tv_description_sale"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lines="3"
                            android:text="@string/lorem"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_sale" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="$1.620"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_bag_shop"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/purple"
                            android:gravity="center"
                            app:icon="@drawable/bag"
                            app:iconGravity="textTop"
                            app:layout_constraintBottom_toBottomOf="@id/tv_money"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale"
                            app:layout_constraintTop_toTopOf="@id/tv_money" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/scrollView_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@id/scrollView_1"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_2_scrollView"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dr_image_sale"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_clothes2"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/red"
                            android:text="Clothes"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="11sp"
                            app:cornerRadius="28dp"
                            app:layout_constraintStart_toStartOf="@id/image_2_scrollView"
                            app:layout_constraintTop_toBottomOf="@id/image_2_scrollView" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar2"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:numStars="5"
                            android:progressTint="@color/star"
                            android:rating="4"
                            android:stepSize="0.1"
                            app:layout_constraintBottom_toBottomOf="@id/md_btn_clothes2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/md_btn_clothes2"
                            app:layout_constraintTop_toBottomOf="@id/image_2_scrollView"
                            app:layout_constraintTop_toTopOf="@id/md_btn_clothes2" />

                        <TextView
                            android:id="@+id/tv_title_sale2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:text="@string/sneakers2"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/md_btn_clothes2" />

                        <TextView
                            android:id="@+id/tv_description_sale2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lines="3"
                            android:text="@string/lorem2"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_sale2" />

                        <TextView
                            android:id="@+id/tv_money2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="$1.620"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale2" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_bag_shop2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/purple"
                            android:gravity="center"
                            app:icon="@drawable/bag"
                            app:iconGravity="textTop"
                            app:layout_constraintBottom_toBottomOf="@id/tv_money2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale2"
                            app:layout_constraintTop_toTopOf="@id/tv_money2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/scrollView_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@id/scrollView_2"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_3_scrollView"
                            android:layout_width="160dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dr_image_sale"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_clothes3"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/red"
                            android:text="Clothes"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="11sp"
                            app:cornerRadius="28dp"
                            app:layout_constraintStart_toStartOf="@id/image_3_scrollView"
                            app:layout_constraintTop_toBottomOf="@id/image_3_scrollView" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar3"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:numStars="5"
                            android:progressTint="@color/star"
                            android:rating="4"
                            android:stepSize="0.1"
                            app:layout_constraintBottom_toBottomOf="@id/md_btn_clothes3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/md_btn_clothes3"
                            app:layout_constraintTop_toBottomOf="@id/image_3_scrollView"
                            app:layout_constraintTop_toTopOf="@id/md_btn_clothes3" />

                        <TextView
                            android:id="@+id/tv_title_sale3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:text="Nike Triple Black Air Force 1
                        '07 sneakers"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/md_btn_clothes3" />

                        <TextView
                            android:id="@+id/tv_description_sale3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lines="3"
                            android:text="A Lorem Ipsum text generator is specifically
                        designed..."
                            android:textColor="@color/gray_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_title_sale3" />

                        <TextView
                            android:id="@+id/tv_money3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="$1.620"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale3" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/md_btn_bag_shop3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/purple"
                            android:gravity="center"
                            app:icon="@drawable/bag"
                            app:iconGravity="textTop"
                            app:layout_constraintBottom_toBottomOf="@id/tv_money3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_description_sale3"
                            app:layout_constraintTop_toTopOf="@id/tv_money3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottombar"
        app:menu="@menu/menu"/>
    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple"
        android:src="@drawable/ic_add"
        android:tintMode="@color/white"
        android:layout_gravity="center"
        app:layout_anchor="@id/bottomAppBar"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>